<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
		
		
	<typeAliases>
	   <typeAlias alias = "Student" type = "ber.com.demo.demo.model.Student"/>
	   <typeAlias alias = "Viagem" type = "ber.com.demo.demo.model.Viagem"/>
	   <typeAlias alias = "ViagemDto" type = "ber.com.demo.demo.model.ViagemDto"/>
	</typeAliases>
	
	 <environments default = "development">
      <environment id = "development">
         <transactionManager type = "JDBC"/> 
			
         <dataSource type = "POOLED">
            <property name = "driver" value = "org.postgresql.Driver"/>
            <property name = "url" value = "jdbc:postgresql://localhost:5432/mybatis"/>
            <property name = "username" value = "postgres"/>
            <property name = "password" value = "postgres"/>
         </dataSource>   
         
      </environment>
   </environments>
		
   <mappers>
      <mapper resource = "mybatis/Student.xml"/>
      <mapper resource = "mybatis/Viagem.xml"/>
   </mappers>
   
</configuration>